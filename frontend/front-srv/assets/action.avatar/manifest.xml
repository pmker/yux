<?xml version="1.0" encoding="UTF-8"?>
<plugin id="action.avatar" enabled="false" label="CONF_MESSAGE[Avatars]" description="CONF_MESSAGE[Get user avatar from Gravatar/Libravatar]">
    <client_settings>
        <resources>
            <i18n namespace="avatar_gravatar" remote="plug/action.avatar/i18n" />
        </resources>
    </client_settings>
    <server_settings>
        <global_param name="AVATAR_PROVIDER" type="select" choices="gravatar|Gravatar,libravatar|Libravatar" label="CONF_MESSAGE[Provider]" description="CONF_MESSAGE[Choose an avatar web service]" mandatory="true" default="gravatar" expose="true"/>
        <global_param name="GRAVATAR_TYPE" type="select" choices="blank|Blank,identicon|IdentIcon,mm|Mystery-Man,monsterid|MonsterID,retro|Retro,wavatar|Wavatar" label="CONF_MESSAGE[Gravatar type]" description="CONF_MESSAGE[Gravatar type]" mandatory="true" default="identicon" expose="true"/>
    </server_settings>
</plugin>
